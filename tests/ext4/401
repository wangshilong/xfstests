#

seq=`basename $0`
seqres=$RESULT_DIR/$seq
echo "QA output created by $seq"

here=`pwd`
tmp=/tmp/$$
status=1	# failure is the default!
trap "_cleanup; exit \$status" 0 1 2 3 15

_cleanup()
{
    cd /
    rm -f $tmp.*
}

# get standard environment, filters and checks
. ./common/rc
. ./common/filter
. ./common/quota

# Modify as appropriate.
_supported_fs ext4
_supported_os Linux
_require_scratch

QUOTA_DIR=$SCRATCH_MNT/quota_dir

_exercise()
{
	type=$1
	mkdir -p $QUOTA_DIR

	$FSSTRESS_PROG -d $QUOTA_DIR -n 1000 -p 100 $FSSTRESS_AVOID >/dev/null 2>&1 &
	sleep 10
	quotaoff -$type $SCRATCH_MNT
	sleep 5
	killall -q $FSSTRESS_PROG
	wait
}
_scratch_mkfs_ext4 -O quota,project >> $seqres.full 2>&1
_scratch_mount >> $seqres.full 2>&1

quotaon -g $SCRATCH_MNT >&/dev/null
echo "*** turn off group quotas"
_exercise g
echo "*** done"

quotaon -P $SCRATCH_MNT >&/dev/null
echo "*** turn off project quotas"
_exercise P
echo "*** done"

quotaon -gP $SCRATCH_MNT >&/dev/null
echo "*** turn off group/project quotas"
_exercise gP
echo "*** done"

# success, all done
status=0
exit
